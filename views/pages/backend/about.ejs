<%- include('../../partials/header') %>

  <!-- summernote -->


<div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <!-- <h1>Employees </h1> -->
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">About us</a></li>
              <!-- <li class="breadcrumb-item active">Employees</li> -->
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-6">
            <form class="form-horizontal" role="form" action="/about" enctype="multipart/form-data" method="post">
              <div class="card card-default">
                <div class="card-header">
                  <h3 class="card-title">Create</h3>
                </div>

                <div class="card-body">
                  <div class="row">
                    <div id="signupalert" class="alert alert-danger" style="display: none;">Error:</div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label for="exampleInputFile">Image</label>
                        <div class="input-group">
                          <div class="custom-file">
                            <input class="form-control" accept="" name="uploaded" type="file">
                            <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="card card-outline card-info">
                        <div class="card-header">
                          <h3 class="card-title">
                            Summernote
                          </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                          <textarea id="summernote">
                          Place <em>some</em> <u>text</u> <strong>here</strong>
                        </textarea>
                        </div>
                        <div class="card-footer">
                          Visit <a href="https://github.com/summernote/summernote/">Summernote</a> documentation for more examples
                          and information about the plugin.
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                  <button id="btn-signup" class="btn btn-info" type="submit"><i class="icon-hand-right"></i>
                    &nbsp;Submit</button>
                </div>
              </div>
            </form>
            <div class="card">
              <div class="card-header border-0">
                <h3 class="card-title"><B>About Banner</B></h3>
              </div>
              <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>About Banner image</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(data.length > 0){ %>
                    <% for(var i=0; i < data.length; i++ ) { %>
                    <tr>
                      <td><%=i+1%></td>
                      <td>
                        <img width="100" src="/images/upload_about_images/<%= data[i].image %>" alt="Product 1" class="img">
                      </td>
                    </tr>
                    <% } %>
                    <% }else{ %>
                      <tr>
                        <td class="col-md-offset-3">No data found</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        <!-- Testimonials -->
          <div class="col-md-6">
            <form class="form-horizontal" role="form" action="/testimonials" enctype="multipart/form-data" method="post">
              <div class="card card-default">
                <div class="card-header">
                  <h3 class="card-title">Create Testimonials</h3>
                </div>

                <div class="card-body">
                  <div class="row">
                    <div id="signupalert" class="alert alert-danger" style="display: none;">Error:</div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label for="exampleInputFile">Image</label>
                        <div class="input-group">
                          <div class="custom-file">
                            <input type="file" class="custom-file-input" id="exampleInputFile" name="uploaded_image">
                            <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                          </div>
                        </div>
                        <div class="col-sm-12">
                          <div class="form-group">
                            <label>Client Name</label>
                            <input class="form-control" name="client_name" type="text" placeholder="Client Name">
                          </div>
                        </div>
                        <div class="col-sm-12">
                          <div class="form-group">
                            <label>Feedback</label>
                            <input class="form-control" name="feedback" type="text" placeholder="Feedback">
                          </div>
                        </div>
                      </div>
                    </div>
                   
                  </div>
                
                </div>
                <div class="card-footer">
                  <button id="btn-signup" class="btn btn-info" type="submit"><i class="icon-hand-right"></i>
                    &nbsp;Submit</button>
                  
                </div>
                <div class="card">
                  <div class="card-header border-0">
                    <h3 class="card-title">Testimonials</h3>
                  </div>
                  <div class="card-body table-responsive p-0">
                    <table class="table table-striped table-valign-middle">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Client Image</th>
                          <th>Client Name</th>
                          <th>Client Feedback</th>
               
                        </tr>
                      </thead>
                      <tbody>
                        <% if(testimonial.length > 0){ %>
                        <% for(var i=0; i < testimonial.length; i++ ) { %>
                        <tr>
                          <td><%=i+1%></td>
                          <td>
                            <img width="100" src="/images/upload_testimonial_images/<%= testimonial[i].image %>" alt="Product 1" class="img">
                            
                          </td>
                          <td><%= testimonial[i].client_name %></td>
                          <td><%= testimonial[i].feedback %></td>
                         <td> <a href="/testimonial/delete/<%=testimonial[i].id%>" class="btn btn-primary btn sm">Delete</a></td>
                        </tr>
                        <% } %>
                        <% }else{ %>
                          <tr>
                            <td class="col-md-offset-3">No Testimonial found</td>
                          </tr>
                        <% } %>
    
    
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </form>
            
          </div>
     



          
          
       
        </div>
      </div>
    </section>
   

    <%- include('../../partials/footer') %>